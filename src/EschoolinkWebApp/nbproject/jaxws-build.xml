<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:webproject2="http://www.netbeans.org/ns/web-project/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.sources.dir}/jax-ws"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${java.home}/../lib/tools.jar:${j2ee.platform.wsimport.classpath}:${javac.classpath}"/>
        </taskdef>
        <condition property="conf-dir" value="${conf.dir}/" else="">
            <isset property="conf.dir"/>
        </condition>
    </target>
    <target name="wsimport-client-test" depends="wsimport-init">
        <mkdir dir="${build.generated.dir}/jax-wsCache/test"/>
        <wsimport sourcedestdir="${build.generated.dir}/jax-wsCache/test" destdir="${build.generated.dir}/jax-wsCache/test" wsdl="${basedir}/${conf-dir}xml-resources/web-service-references/test/wsdl/localhost_18001/EShoolinkComAppService1/test.wsdl" catalog="catalog.xml" extension="true" verbose="true" wsdlLocation="http://localhost:18001/EShoolinkComAppService1/test?WSDL" xnocompile="true">
            <depends file="${basedir}/${conf-dir}xml-resources/web-service-references/test/wsdl/localhost_18001/EShoolinkComAppService1/test.wsdl"/>
            <produces dir="${build.generated.dir}/jax-wsCache/test"/>
        </wsimport>
        <copy todir="${build.generated.sources.dir}/jax-ws">
            <fileset dir="${build.generated.dir}/jax-wsCache/test">
                <include name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="wsimport-client-clean-test" depends="-init-project">
        <delete dir="${build.generated.sources.dir}/jax-ws/eshoolinkcomapp"/>
        <delete dir="${build.generated.dir}/jax-wsCache/test"/>
    </target>
    <target name="wsimport-client-generate" depends="wsimport-client-test"/>
</project>
